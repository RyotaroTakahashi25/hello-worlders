{
  "manifest_version": 3,
  "name": "Amazon Mission Extension",
  "version": "1.0",
  "permissions": ["storage", "tabs"],
  "content_scripts": [
    {
      "matches": ["https://www.amazon.co.jp/*"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "index.html",
        "quiz_game.html",
        "game_logic.js",
        "quiz_logic.js",
        "style.css",
        "タイピングゲーム/typing.html",
        "oxゲーム/tictactoe.html",
        "モグラ叩き/whackamole.html",
        "スライドパズル/puzzle.html",
        "images/binbougami_icon.png"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}